{
  "manifest_version": 3,
  "name": "Fact Check24",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
  "https://speech.googleapis.com/"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "permissions": [
    "sidePanel",
    "tabs",
    "offscreen",
    "tabCapture"
  ],
  "commands": {
    "capture-audio": {
      "suggested_key": {
        "default": "Ctrl+B"
      },
      "description": "Starte Audio-Capture des aktuellen Tabs"
    }
  }
}